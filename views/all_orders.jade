extends layout

block section
  div(class="container table-responsive")
    h1(class="add-padding smooth-shadow") All parcel delivery orders
    if !error
      table(class="table table-bordered table-hover smooth-shadow atm abm text-center")
        thead(class="table-head")
          th Order ID
          th Product
          th Quantity
          th Weight
          th Price
          th Status
          th(colspan="3")

        each order in parcels
          tr
            td #{order.orderId}
            td #{order.product}
            td #{order.quantity}
            td #{order.weight}
            td #{order.price}

            td
              if order.status != "Unprocessed"
                if order.status == "Delivered"
                  span(class="btn smooth-shadow order-delivered") #{order.status}
                else if order.status  == "In transit"
                  span(class="btn smooth-shadow order-in-transit") #{order.status}
            td
              a(href="#{path}users/#{user.id}/parcels/#{order.orderId}", class="btn smooth-shadow") Details

            if order.status != "Delivered"
              if order.status != "Delivered"
              td
                a(href="#{path}users/#{user.id}/parcels/#{order.orderId}/change", class="btn smooth-shadow") Change
              td
                a(href="#{path}users/#{user.id}/parcels/#{order.orderId}/cancel", class="btn cancel-order smooth-shadow") Cancel
    else
      h1(class="message-error add-padding text-center") #{error}
