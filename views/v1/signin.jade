extends layout

block section
  div(class="container")
    div(id="user-signin", class="smooth-shadow atm")
    
      if user == false && !error
        div(class="message-error add-padding text-center") Sorry, your username or password is incorrect!

      if error
        div(class="message-error add-padding text-center") Sorry, this account doesn't exist!

      fieldset
        legend
          h1 Sing-in
        form(role="form", method="post", action="#{path}#{apiVersion}/users/signin")
          label(for="uname") Username
          input(type="text", class="form-control smooth-shadow", name="uname", required="required")
          br
          label(for="password") Password
          input(type="password", class="form-control smooth-shadow", name="password", required="required")
          br
          div(class="text-center")
            button(type="submit" class="submit-btn no-border smooth-shadow alp arp") Submit