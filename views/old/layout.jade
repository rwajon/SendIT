doctype html
html
 -(path ? path : path = '../../')
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="#{path}assets/css/main.css")

  body
    header
      a(href="#{path}")
        img(id="logo-top", src="#{path}assets/images/sendit.png")

      if user
        a(id="user-top", href="#{path}users/#{user.id}")
          b(class="arp") #{user.uname}
          img(id="top-user-picture", src="#{path}assets/images/user.jpg")

    nav
      if user || admin
        button(id="menu-aside-toggle-btn")
          <hr/><hr/><hr/>

      ul(id="menu-top", class="arp")
        li
          a(href="#{path}") Home
        if user
          li
            a(href="#{path}users/#{user ? user.id : ''}") Profile
          li
            a(href="#{path}users/signout") Sign-out
        if !user
          li
            a(href="#{path}users/signup") Sign-up
          li
            a(href="#{path}users/signin") Sign-in
        li
          a(href="#{path}admin") Admin

    aside(id="menu-aside")
      if user
        div(class="atp alp arp")
          a(href="#{path}users/#{user.id}/parcels/create") Create a parcel delivery order
          a(href="#{path}users/#{user.id}/parcels/created") Created order(s)
          a(href="#{path}users/#{user.id}/parcels/in-transit") Parcel in transit
          a(href="#{path}users/#{user.id}/parcels/delivered") Delivered parcel
          a(href="#{path}users/#{user.id}/parcels/") All delivery orders

      if admin
        div(class="atp alp arp") 
          a(href="#{path}parcels/created") Created order(s)
          a(href="#{path}parcels/in-transit") Parcel in transit
          a(href="#{path}parcels/delivered") Delivered parcel
          a(href="#{path}parcels") All delivery orders
   
    section
      block section

    footer
      div(class="text-center")
        p(class="alm") Copyright &copy; 2018 SendIT

    script(type="text/javascript", src="#{path}assets/js/main.js")
