doctype html
html

  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="#{path}public/css/main.css")

  body
    header
      a(href="#{path}")
        img(id="logo-top", src="#{path}public/images/sendit.png")

      if user
        a(id="user-top", href="#{path}users/#{user.id}")
          b(class="arp") #{user.uname}
          img(id="top-user-picture", src="#{path}public/images/user.jpg")

    nav
      if user || admin
        button(id="menu-aside-toggle-btn")
          <hr/><hr/><hr/>

      ul(id="menu-top", class="arp")
        li
          a(href="#{path}") Home
        if user
          li
            a(href="#{path}users/#{user ? user.id : ''}") Profile
        if !user
          li
            a(href="#{path}users/signup") Sign-up
          li
            a(href="#{path}users/signin") Sign-in
        li
          a(href="#{path}admins") Admin
        if user || admin
          li
            a(href="#{path}users/signout") Sign-out

    aside(id="menu-aside")
      if user
        div(class="atp alp arp")
          a(href="#{path}users/#{user.id}/parcels/create") New order
          a(href="#{path}users/#{user.id}/parcels/pending") Pending <span class="badge pending">0</span>
          a(href="#{path}users/#{user.id}/parcels/in-transit") In transit <span class="badge in-transit">0</span>
          a(href="#{path}users/#{user.id}/parcels/delivered") Delivered <span class="badge delivered">0</span>
          a(href="#{path}users/#{user.id}/parcels") All

      if admin
        div(class="atp alp arp") 
          a(href="#{path}parcels/pending") Pending
          a(href="#{path}parcels/in-transit") In transit
          a(href="#{path}parcels/delivered") Delivered
          a(href="#{path}parcels") All
   
    section
      block section

    footer
      div(class="text-center")
        p(class="alm") Copyright &copy; 2018 SendIT

    script(type="text/javascript", src="#{path}public/js/main.js")
